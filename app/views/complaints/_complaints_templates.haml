            <specialInvestigationsUnitComplaintBasisFilterSelect filter_criteria='{{filter_criteria}}' id='{{id}}' name='{{name}}'/>
            {{/all_special_investigations_unit_complaint_bases}}
    .row.labels
      .col-md-2= t('.agency')
      .col-md-2= t('.assignee')
    .row{:style => "margin-bottom:12px;"}
      .col-md-2
        .btn-group.select
