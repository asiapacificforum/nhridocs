            <humanRightsComplaintBasisFilterSelect filter_criteria='{{filter_criteria}}' id='{{id}}' name='{{name}}'/>
            {{/all_human_rights_complaint_bases}}
            %li.dropdown-header= t('.special_investigations_unit')
