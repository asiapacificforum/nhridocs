%script#new_project_template{:type => 'template/ractive'}
  .row.new_project{:intro => 'slide'}
    .col-md-12
      .row.form-group{:class => "{{#title_error}}has-error{{/}}"}
        .col-md-2
          %label{:for => 'project_title'}=t('.title')
        .col-md-7
          %input.form-control#project_title{:value => '{{title}}', 'on-keydown'=>"remove_attribute_error('title')"}
          .help-block.error#title_error= t('.title_error_message')
        .col-sm-3
          %i.fa.fa-remove.fa-lg#cancel_project{ :style=>"padding-left:30px", "on-click"=>"cancel_project()", "data-toggle"=>"tooltip", "data-placement"=>"bottom", :title=>"cancel"}
          %i.fa.fa-check.fa-lg#save_project{ :style=>"padding-left:60px", "on-click"=>"save_project()", "data-toggle"=>"tooltip", "data-placement"=>"bottom", :title=>"save"}
      .row.form-group{:class => "{{#description_error}}has-error{{/}}"}
        .col-md-2
          %label{:for => 'project_description'}=t('.description')
        .col-md-7
          %textarea.form-control#project_description{:value => '{{description}}', 'on-keydown'=>"remove_attribute_error('description')"}
          .help-block.error#description_error= t('.description_error_message')
      <mandatesSelector mandates='{{all_mandates}}' />
      <projectTypesSelector all_mandates='{{all_mandates}}' />
      {{> agency_convention_selector }}
      <performanceindicatorselect />
      {{> file_selector_template }}

