              <agencies agencies='{{agencies}}' />
              <conventions conventions='{{conventions}}' />
            .fade.edit
              <mandatesSelector mandates='{{all_mandates}}' />
              <projectTypesSelector all_mandates='{{all_mandates}}'/>
              {{> agency_convention_selector }}
        .panel.panel-default.documents
          .panel-heading
            .row
              .col-md-2= t('.project_documents')
          .panel-content{'data-toggle' => :edit}
            .fade.no_edit.in#project_documents
              <projectDocuments project_documents='{{project_documents}}'>
            .fade.edit{:style => "padding-left:15px; padding-top:15px;"}
