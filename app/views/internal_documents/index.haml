= stylesheet_link_tag 'internal_documents'
= render :partial => 'internal_documents/index', :locals => {:i18n_key => @i18n_key}



:javascript
  var maximum_filesize = #{InternalDocument.maximum_filesize * 1000000}
  var permitted_filetypes = #{ InternalDocument.permitted_filetypes.to_json }
  var files = #{ @internal_documents.to_json }
  var files_list_error = "#{t('.flash.no_files_error')}"
  var required_files_titles = #{@required_files_titles.to_json}
  var model_name = "#{@model_name}"
  var context = "#{@model_name.deconstantize.underscore.gsub(/\//,'_')}" // e.g. good_governance, corporate_services etc.

= javascript_include_tag "internal_documents"
