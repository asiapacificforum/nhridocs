.message_block, #jflash {
  clear: both;
  margin-top: 0.2em;
  margin-bottom: 0.3em;
	width: 500px;
}

.message_block ul, #jflash ul {
  margin-bottom: 0;
  list-style: none;
  padding: 10px;
}
.message_block ul li, #jflash ul li {
  margin-left: 4em;
}

.message_block ul.error, #jflash ul.error {
  border-top: 1px solid #ecd757;
  border-bottom: 1px solid #ecd757;
  background: #fcf6d0 url(<%= asset_path 'message_block/error_m.gif' %>) 1em 50% no-repeat;
}

