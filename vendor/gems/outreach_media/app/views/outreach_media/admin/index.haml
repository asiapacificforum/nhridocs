.message_block
%h1=t('.heading')

%h4=t('.subheading.filetypes')
= render :partial => 'outreach_media_filetypes'

%h4=t('.subheading.filesize')
= render :partial => 'outreach_media_filesize'

%h4=t('.subheading.areas')
