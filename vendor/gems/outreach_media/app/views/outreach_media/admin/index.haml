= stylesheet_link_tag 'form_errors'

.message_block
%h1=t('.heading')

%h4=t('.subheading.filetypes')
#outreach_event_filetypes
  = render :partial => 'admin/collection_configuration',
    :locals => { :new_item => @outreach_filetype,
                 :create_url => outreach_media_filetypes_path,
                 :delete_url => outreach_media_filetype_path('id'),
                 :collection => @outreach_filetypes,
                 :item_name => 'filetype',
                 :param_name => 'ext',
                 :placeholder => 'e.g. ppt'}

%h4=t('.subheading.filesize')
#outreach_event_filesize
  = render :partial => 'admin/document_filesize_configuration',
    :locals => { :update_url => outreach_media_filesize_path,
                 :param => @outreach_filesize,
                 :context => "outreach"}

%h4=t('.subheading.areas')
= render :partial => 'outreach_media_areas'

%h4=t('.subheading.audience_types')
= render :partial => 'outreach_event_audience_types'

:coffeescript
  $ ->
    _.templateSettings = { interpolate: /\{\{(.+?)\}\}/g }

    window.flash_error_template = _.template($("#flash_error_template").html())


%script{:type => 'template/html', :id => :flash_error_template}
  %ul.error
    %li {{ message }}
