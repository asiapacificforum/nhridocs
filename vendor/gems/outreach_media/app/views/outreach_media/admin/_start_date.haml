.admin.well
  =form_for @start_date, :url => corporate_services_strategic_plans_start_date_path, :method => :put, :remote => true do |f|
    %table.table.borderless.start_date{:style => "width:300px;"}
      %tbody
        %tr
          %td current_val
          %td
            %span#start_date= @start_date.date.strftime("%B %e")
        %tr
          %td
            %button.btn.btn-success.btn-xs#change_start_date{:style => 'line-height:1.8;', :type => 'submit'} .change
          %td= f.date_select :date, :discard_year => true, :include_blank => true

:coffeescript
  $ ->
    $('#new_strategic_plan_start_date').bind "ajax:success", (e,data,status,xhr)->
      $('span#start_date').text(data.date)
      $('select[id^=strategic_plan_start_date]').prop('selectedIndex',0)
