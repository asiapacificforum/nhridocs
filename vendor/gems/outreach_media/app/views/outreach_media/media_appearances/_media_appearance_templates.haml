%script#media_appearances_template{:type => 'template/ractive'}
  .row#media_appearances_controls
    .row
      .col-md-4
        %h4= t('.search_heading')
    .row.labels
      .col-md-2= t('.title')
      .col-md-2= t('.from')
      .col-md-2= t('.to')
      .col-md-2
        =t('.area')
        \/
        =t('.subarea')
    .row{:style => "margin-bottom:12px;"}
      .col-md-2= text_field_tag :title, "{{sort_criteria.title}}", :placeholder => t('.enter_text')
      .col-md-2
        %input{:type=>"text", :id=>"from", :name=>"from", :placeholder => t('.from_date'), :value => "{{formatted_from_date}}"}
      .col-md-2
        %input{:type=>"text", :id=>"to", :name=>"to", :placeholder => t('.to_date'), :value => "{{formatted_to_date}}"}
      .col-md-3
        .btn-group.area-select
          %button.btn.btn-default.dropdown-toggle{:type=>:button, 'data-toggle'=>'dropdown'}
            %span.filter-option.pull-left= t('.select')
            %span.caret
          %ul.dropdown-menu
            %li.filter_rule
              %a{'on-click'=>"filter_rule('all')", :class => "{{#if sort_criteria.rule == 'all'}}selected{{/if}}"}
                %span=t('.all')
                %span.fa.fa-check
              %a{'on-click'=>"filter_rule('any')", :class => "{{#if sort_criteria.rule == 'any'}}selected{{/if}}"}
                %span=t('.any')
                %span.fa.fa-check
            {{#areas}}
            <area id='{{id}}' name='{{name}}'/>
            {{/areas}}
      .col-md-1
        %i.erase.fa.fa-refresh{'on-click'=>'clear_filter()', 'data-toggle'=>'tooltip', 'title' => t('.clear')}
      .col-md-2{:style => 'padding-left:84px'}
        {{#if expanded}}
        %a#compact{'on-click'=>'compact()', 'data-toggle'=>'tooltip', 'title'=>t('.compact_all')}
        {{else}}
        %a#expand{'on-click'=>'expand()', 'data-toggle'=>'tooltip', 'title'=>t('.expand_all')}
        {{/if}}
    .row.labels
      .col-md-2= t('.people_affected')
      .col-md-2= t('.severity')
      .col-md-2= t('.coefficient')
      .col-md-2= t('.positivity')
    .row.labels
      .col-md-1= t('.min')
      .col-md-1= t('.max')
      .col-md-1= t('.min')
      .col-md-1= t('.max')
      .col-md-1= t('.min')
      .col-md-1= t('.max')
      .col-md-1= t('.min')
      .col-md-1= t('.max')
    .row
      .col-md-1.filter_field.pa_min
        %input{:style=>"width:80px", :value => '{{sort_criteria.pa_min}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.pa_max
        %input{:style=>"width:80px", :value => '{{sort_criteria.pa_max}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.vs_min
        %input{:style=>"width:50px", :value => '{{sort_criteria.vs_min}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.vs_max
        %input{:style=>"width:50px", :value => '{{sort_criteria.vs_max}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.vc_min
        %input{:style=>"width:50px", :value => '{{sort_criteria.vc_min}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.vc_max
        %input{:style=>"width:50px", :value => '{{sort_criteria.vc_max}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.pr_min
        %input{:style=>"width:50px", :value => '{{sort_criteria.pr_min}}'}
        %span.error_message Invalid
      .col-md-1.filter_field.pr_max
        %input{:style=>"width:50px", :value => '{{sort_criteria.pr_max}}'}
        %span.error_message Invalid
  {{#media_appearances}}
  <ma on-edit='edit' expanded='false', description_error='{{description_error}}' id='{{id}}' title='{{title}}' date='{{date}}'  metrics='{{metrics}}'  has_link='{{has_link}}'  has_scanned_doc='{{has_scanned_doc}}'  media_areas='{{media_areas}}'  reminders='{{reminders}}'  notes='{{notes}}'  create_reminder_url='{{create_reminder_url}}'  create_note_url='{{create_note_url}}' />
  {{/media_appearances}}

%script#media_appearance_template{:type => 'template/ractive'}
  {{#if persisted }}
  {{> show_media_appearance_template }}
  {{else}}
  {{> new_media_appearance_template }}
  {{/if}}

%script#show_media_appearance_template{:type => 'template/ractive'}
  .row.media_appearance.well.well-sm.editable_container{:style => "{{#if !include}}display:none{{/if}}", :decorator => 'inpage_edit:{{id}}'}
    .col-md-12
      .row.basic_info
        .col-md-2.date{:style => "width:15%"} {{ date }}
        .col-md-2.title{'data-toggle'=>'edit', :style => "width:60%"}
          .fade.no_edit.in
            %span {{ title }}
          .fade.edit{:style => "width: 100%"}
            %input.form-control#media_appearance_title{:name => "media_appearance[title]", :'value' => "{{ title }}", :style => 'background-color:#e4e0ce; width:100%; font-size: 16px; margin-left:2px; height:22px;', 'on-keydown' => "remove_title_errors()"}
        .col-md-2.actions{:style => "width:25%"}
          .row{:style => "margin-left:0px;"}
            .col-md-1.alarm_icon{'on-click' => "show_reminders_panel()", :style => "position:relative; top:2px;"}
            .col-md-1
              %i.fa.fa-file-text-o.show_notes{'on-click' => "show_notes_panel()", :style => "position:relative; left: -3px;"}
            {{#if has_link }}
            .col-md-1
              %i.fa.fa-globe
            {{elseif has_scanned_doc }}
            .col-md-1
              %i.fa.fa-cloud-download
            {{/if}}
            .col-md-1.icon{ 'data-toggle' => 'edit'}
              .fade.edit
                %i.fa.fa-remove{:id => "strategic_priority_editable{{id}}_edit_cancel", :style=>"position:relative; left:17px"}
            .col-md-1.icon{'data-toggle' => 'edit'}
              .fade.edit
                %i.fa.fa-check{:id => "strategic_priority_editable{{id}}_edit_save", :style => "position:relative; left:13px"}
              .fade.no_edit.in
                %i.fa.fa-pencil-square-o{:id => "strategic_priority_editable{{id}}_edit_start", :style=> "position:relative; top:1px;"}
            .col-md-1
              %i.fa.fa-sm.fa-trash-o.delete_icon{'on-click'=>'delete_this(event)'}
            {{#if expanded}}
            .col-md-1{'data-toggle'=>:collapse, :href => ".collapse{{id}}", :style => "width:45px;"}
              %i#compact{'on-click'=>'compact()', 'data-toggle'=>'tooltip', 'title'=>t('.compact'), :style => "position:relative; top:3px;"}
            {{else}}
            .col-md-1{'data-toggle'=>:collapse, :href => ".collapse{{id}}", :style => "width:45px;"}
              %i#expand{'on-click'=>'expand()', 'data-toggle'=>'tooltip', 'title'=>t('.expand'), :style => "position:relative; top:3px;"}
            {{/if}}
      {{#debug}}
      .row
        .col-md-1{:style => "color:{{#if matches_title }}green{{else}}red{{/if}}"} title
        .col-md-1{:style => "color:{{#if matches_from }}green{{else}}red{{/if}}"} from
        .col-md-1{:style => "color:{{#if matches_to }}green{{else}}red{{/if}}"} to
        .col-md-1{:style => "color:{{#if matches_area_subarea }}green{{else}}red{{/if}}"} area_subarea
        .col-md-1{:style => "color:{{#if matches_violation_coefficient }}green{{else}}red{{/if}}"} violation_coefficient
        .col-md-1{:style => "color:{{#if matches_positivity_rating }}green{{else}}red{{/if}}"} positivity_rating
        .col-md-1{:style => "color:{{#if matches_violation_severity }}green{{else}}red{{/if}}"} violation_severity
        .col-md-1{:style => "color:{{#if matches_people_affected }}green{{else}}red{{/if}}"} people_affected
        .col-md-1{:style => "color:{{#if matches_area }}green{{else}}red{{/if}}"} area
        .col-md-1{:style => "color:{{#if matches_subarea }}green{{else}}red{{/if}}"} subarea
      {{/debug}}
      .panel.panel-default.collapse.expanded_info{:class => "collapse{{id}}"}
        .panel-heading
          .row
            .col-md-2.description{:style => "width:50%"}
              =t('.areas')
              \/
              =t('.subareas')
            .col-md-2.metrics{:style=>"width:25%;"}= t('.metrics')
        .panel-content
          .row
            .col-md-2.description{'data-toggle'=>'edit', :style => "width:50%"}
              <div class="fade edit in"><div class="checkbox"><label><input id="media_appearance_area_ids_1" name="media_appearance[area_ids][]" type="checkbox" value="1"> Human Rights</label></div> <div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_1" name="media_appearance[subarea_ids][]" type="checkbox" value="1"> Violation</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_2" name="media_appearance[subarea_ids][]" type="checkbox" value="2"> Education activities</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_3" name="media_appearance[subarea_ids][]" type="checkbox" value="3"> Office reports</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_4" name="media_appearance[subarea_ids][]" type="checkbox" value="4"> Universal periodic review</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_5" name="media_appearance[subarea_ids][]" type="checkbox" value="5"> CEDAW</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_6" name="media_appearance[subarea_ids][]" type="checkbox" value="6"> CRC</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_7" name="media_appearance[subarea_ids][]" type="checkbox" value="7"> CRPD</label></div><div class="checkbox"><label><input id="media_appearance_area_ids_2" name="media_appearance[area_ids][]" type="checkbox" value="2"> Good Governance</label></div> <div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_8" name="media_appearance[subarea_ids][]" type="checkbox" value="8"> Violation</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_9" name="media_appearance[subarea_ids][]" type="checkbox" value="9"> Office report</label></div><div class="checkbox subarea"><label><input id="media_appearance_subarea_ids_10" name="media_appearance[subarea_ids][]" type="checkbox" value="10"> Office consultations</label></div><div class="checkbox"><label><input id="media_appearance_area_ids_3" name="media_appearance[area_ids][]" type="checkbox" value="3"> Corporate Services</label></div> <div class="checkbox"><label><input id="media_appearance_area_ids_4" name="media_appearance[area_ids][]" type="checkbox" value="4"> Special Investigations Unit</label></div> </div>
            .col-md-2.metrics{:style=>"width:25%; display:flex; flex-direction:column;"}
              {{#formatted_metrics:key}}
              <metric/>
              {{/formatted_metrics}}
    <reminders/>
    <notes/>

%script#new_media_appearance_template{:type => 'template/ractive'}
  .row.media_appearance.well.well-sm.form
    .col-md-12
      .col-md-1{:style => "padding-top:28px"}= t('.title')
      .col-md-8
        .form-group.clearfix{:class => "{{#title_error}}has-error{{/}}"}
          =label_tag :title, t('.title'), :class => 'control-label sr-only'
          .chars_remaining{:style => "float:right"}= t('.chars_remaining') # the count variable is embedded in the i18n text
          =text_field_tag 'media_appearance[title]', nil, :class => 'form-control', :placeholder => "Enter title", :size => 100, :maxlength => 100, :value => "{{title}}", 'on-keydown' => "remove_title_errors()"
          %span.help-block#title_error{:style => "font-size:0.8em; padding-left:4px; position:relative; top:-4px; width:100%; background-color:#d9d0a5"}= t('.title_error_message')
      .col-md-2
        .form-group
          .nothing{:style => 'visibility:hidden'} nothing
          %i.fa.fa-remove.fa-lg#edit_cancel{:style => 'padding-left:30px', 'on-click'=>'cancel()'}
          %i.fa.fa-check.fa-lg#edit-save{:style => 'padding-left:30px', 'on-click'=>'save()'}
      .panel.panel-default.expanded_info
        .panel-heading
          .row
            .col-md-2.description{:style => "width:50%"}
              =t('.areas')
              \/
              =t('.subareas')
            .col-md-2.metrics{:style=>"width:25%;"}= t('.metrics')
        .panel-content
          .row
            .col-md-2{:style => "width:50%"}
              {{#areas }}
              <area-select id='{{id}}' area_id='{{id}}'/>
              {{/areas }}
            .col-md-2{:style => "width:50%"}
              .form-group.hr_metrics.row#positivity_rating{:style => 'display:none'}
                %label.control-label.col-md-2{:for => 'positivity_rating', :style => "width:40%"}= t('.pos_rating')
                =select_tag "media_appearance[positivity_rating_rank]", positivity_rating_options, :prompt => t('.select_pr'), :class =>"form-control col-md-2", :id => "positivity_rating",  :style => "width:50%"
              .form-group.hr_metrics.row#violation_severity{:style => 'display:none'}
                %label.control-label.col-md-2{:for => 'violation_severity', :style => "width:40%"}= t('.violation_severity')
                =select_tag "media_appearance[violation_severity_rank]", violation_severity_options, :prompt => t('.select_vs'), :class =>"form-control col-md-2", :id => "violation_severity",  :style => "width:50%"
              .form-group.hr_metrics.row#people_affected{:style => 'display:none'}
                %label.control-label.col-md-2{:for => 'people_affected', :style => "width:40%"}= t('.num_people')
                %input.form-control#people_affected.col-md-2{:placeholder => t('.enter_num_val'), :name => "media_appearance[affected_people_count]", :style => "width:15%"}

%script#area_select_template{:type=> 'template/ractive'}
  .checkbox
    %label
      %input{:type=>:checkbox, :id => 'media_appearance_area_ids_{{id}}', :name => 'media_appearance[area_ids][]', :value => '{{id}}'}
      {{ name }}
  {{#subareas }}
  <subarea-select id='{{id}}'/>
  {{/subareas }}

%script#subarea_select_template{:type=> 'template/ractive'}
  .checkbox.subarea
    %label
      %input{:type=>:checkbox, 'on-change' => 'show_metrics(id)', :checked => '{{checked}}', :id => 'media_appearance_subarea_ids_{{id}}', :name => 'media_appearance[subarea_ids][]', :value => '{{id}}'}
      {{ name }}

%script#area_template{:type=> 'template/ractive'}
  %li{:class => 'area dropdown-header {{#if area_selected}}selected{{/if}}'}
    %a{'on-click'=>'toggle()'}
      %span {{name}}
      %span.fa.fa-check
  {{#subareas}}
  <subarea>
  {{/subareas}}

%script#subarea_template{:type=> 'template/ractive'}
  %li{:class => 'subarea {{#if subarea_selected}}selected{{/if}}'}
    %a.opt{'on-click'=>'toggle()'}
      %span.text {{name}}
      %span.fa.fa-check

%script#media_area_template{:type=> 'template/ractive'}
  .area
    .name {{ name }}
    .subareas
      {{#subarea_ids:i}}
      <mediasubarea id={{subarea_ids[i]}}>
      {{/subarea_ids}}

%script#media_subarea_template{:type=> 'template/ractive'}
  %span.subarea {{ name }}

%script#metric_template{:type => 'template/ractive'}
  .metric{:id =>"{{key}}"}
    .name {{ name }}
    .value {{ value }}
