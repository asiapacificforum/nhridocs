= stylesheet_link_tag 'nhri/indicators'
= stylesheet_link_tag 'form_errors'

%h1{:style => "padding-bottom:24px"}= t('.indicators_heading', :title => @heading.title)
#monitor
#file_monitor
#new_indicator
#heading


= render :partial => 'reminders/reminder' # it's in the main app
= render :partial => 'notes/note' # it's in the main app
= render :partial => 'monitor'
= render :partial => 'indicators_templates'
= render :partial => 'new_indicator_template'
= javascript_include_tag 'jquery_datepicker'
= javascript_include_tag 'nhri/indicators'
= javascript_include_tag 'nhri/monitors'


:coffeescript
  window.heading_data = #{@heading.to_json}
  window.natures = [{name:'structural',text:"#{t('.structural')}"},{name:'process',text:"#{t('.process')}"},{name:'outcomes',text:"#{t('.outcomes')}"}]
  window.permitted_filetypes = #{ Nhri::FileMonitor.permitted_filetypes.to_json }
  window.maximum_filesize = #{ Nhri::FileMonitor.maximum_filesize * 1000000 }
