%div#popover_template{:style=>"display: none"}
  .popover.fileDetails{:role=>"tooltip"}
    .arrow
    %h3.popover-title
    .popover-content

%div#detailsTitle{:style=>"display: none"}
  %span{:style => 'z-index:20'}= t('.details')
