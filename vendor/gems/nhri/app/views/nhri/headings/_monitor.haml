%script#monitors_template{:type => 'ractive/template'}
  {{>text_modal}}

%script#file_monitor_template{:type => 'ractive/template'}
  {{>file_modal}}

= render :partial => 'numeric_modal'
= render :partial => 'text_modal'
= render :partial => 'file_modal'

%script#numericMonitorDetailsContent{:type => 'text/ractive'}
  %table#details{:style => 'width:200px'}
    %tr
      %td= t('.created_on')
      %td#created_on {{ date }}
    %tr
      %td= t('.author')
      %td#author {{ author_name }}

%script#textMonitorDetailsContent{:type => 'text/ractive'}
  %table#details{:style => 'width:200px'}
    %tr
      %td= t('.created_on')
      %td#created_on {{ date }}
    %tr
      %td= t('.author')
      %td#author {{ author_name }}

%script#fileMonitorDetailsContent{:type => 'text/ractive'}
  - scope = 'activerecord.attributes.file_monitor'
  %table#details{:style => 'width:280px;'}
    %tr
      %td= t('original_filename', :scope => scope)
      %td#name {{ original_filename }}
    %tr
      %td= t('filesize', :scope => scope)
      %td#filesize {{ formatted_filesize }}
    %tr
      %td= t('lastModified', :scope => scope)
      %td#lastModified {{ formatted_modification_date }}
    %tr
      %td= t('uploadedOn', :scope => scope)
      %td#uploadedOn {{ formatted_creation_date }}
    %tr
      %td= t('uploadedBy', :scope => scope)
      %td#author {{ author.first_last_name }}

%div#popover_template{:style=>"display: none"}
  .popover.fileDetails{:role=>"tooltip"}
    .arrow
    %h3.popover-title
    .popover-content

%div#detailsTitle{:style=>"display: none"}
  %span{:style => 'z-index:20'}= t('.details')
