.row.row-eq-height
  .col-md-1.grid_headings{:style => "display:flex; align-items:center; width:104px;"}
    %div= t(".#{nature}")
  .col-md-11
    .row
      .col-md-12{:style => "padding-left: 30%;"}
        %div{:style => "display:inline-block;"}
          %ul{:style => "padding-left:10px"}
            = render :partial => 'indicator', :collection => @heading.send("all_offence_#{nature}_indicators"), :as => :indicator
    .row.row-eq-height
      - @heading.offences.each do |o|
        .col-md-2{:style => "width:#{100/@heading.offences.length}%"}
          %ul{:style => "padding-left:10px"}
            = render :partial => 'indicator', :collection => o.send(nature+"_indicators"), :as => :indicator
