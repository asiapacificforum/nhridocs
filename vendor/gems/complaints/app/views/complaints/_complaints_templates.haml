%script#show_complaint_template{:type => 'template/ractive'}
  .row.well.well-sm.expandable_well.complaint.editable_container{ :style => "{{#if !include}}display:none{{/if}}", :decorator => 'inpage_edit:{{id}}'}
    .col-md-12{'data-toggle' => :edit}
      .fade.edit
        %span.required_before=t('required')
    .col-md-12
      .row.basic_info
        .col-md-2
          .row
            .col-md-12
              %label= t('.reference')
              %span.case_reference {{ case_reference }}
        .col-md-7
          .row{'data-toggle' => :edit}
            .col-md-3
              %label= t('.date_received')
            .col-md-9.date_received
              .no_edit.in {{formatted_date}}
              .edit
                %input#date_received{:type => :text, :name => "{{formatted_date}}", :decorator => :single_month_datepicker, :value => "{{formatted_date}}", :style => "position:relative; z-index:12"}
          .row
            .col-md-3
              %label= t('.current_assignee')
            .col-md-9
              %span.current_assignee {{ current_assignee_name }}
          .row{'data-toggle'=>:edit}
            .col-md-3
              %label= t('.status')
            .col-md-9
              .fade.no_edit.in#status_changes
                {{# status_changes}}
                .status_change
                  %span.status_humanized {{status_humanized}}
                  {{#if date || user_name}}
                  (
                  {{#if user_name}}
                  =t('.by')
                  %span.user_name
                    {{user_name}}
                  {{/if}}
                  {{#if date && user_name}}
                  ,
                  {{/if}}
                  {{#if date}}
                  =t('.on')
                  %span.date
                    {{local(date)}}
                  {{/if}}
                  )
                  {{/if}}
                {{/ status_changes}}
              .fade.edit#current_status
                %form
                  %span= t('.open')
                  %input#open{:type=>:radio, :name=>'{{current_status_humanized}}', :value=>'Open'}
                  %span= t('.suspended')
                  %input#suspended{:type=>:radio, :name=>'{{current_status_humanized}}', :value=>'Suspended'}
                  %span= t('.closed')
                  %input#closed{:type=>:radio, :name=>'{{current_status_humanized}}', :value=>'Closed'}
          .row
            .col-md-3{'data-toggle' => :edit}
              .no_edit.in
                %label= t('.complainant')
              .edit
                %label= t('.complainant')
            .col-md-9{'data-toggle'=>'edit'}
              .no_edit.in
                %span.chiefly_title {{ chiefly_title }}
                %span.firstName {{ firstName }}
                %span.lastName  {{ lastName }}
              .edit
                .row
                  .col-md-4.form-group
                    %label{:for => :chiefly_title}=t('.chiefly_title')
                    %input.form-control#chiefly_title{:value => '{{chiefly_title}}'}
                  .col-md-4.form-group{:class => "{{#firstName_error}}has-error{{/}}"}
                    %label.required{:for => :firstName}=t('.first_name')
                    %input.form-control#firstName{:value => '{{firstName}}', 'on-keydown'=>"remove_attribute_error('firstName')"}
                    %span.help-block.error#firstName_error= t('.firstName_error_message')
                  .col-md-4.form-group{:class => "{{#lastName_error}}has-error{{/}}"}
                    %label.required{:for => :lastName}=t('.last_name')
                    %input.form-control#lastName{:value => '{{lastName}}', 'on-keydown'=>"remove_attribute_error('lastName')"}
                    %span.help-block.error#lastName_error= t('.lastName_error_message')
        .col-md-3.actions
          .row{:style => "margin-left:0px;"}
            .col-md-1.col-md-offset-2{'data-toggle'=>:edit}
              .no_edit.in
                .alarm_icon.counter{'data-count'=>"{{reminders_count}}", 'on-click' => "show_reminders_panel()", 'data-toggle' => :tooltip, :title => t('.reminders')}
              .edit
            .col-md-1{'data-toggle'=>:edit}
              .no_edit.in
                .note_icon.show_notes.counter{'data-count'=>'{{notes_count}}', 'on-click' => "show_notes_panel()", 'data-toggle' => :tooltip, :title => t('.notes')}
              .edit
            .col-md-1{'data-toggle'=>:edit}
              .no_edit.in
                %i.fa.fa-comments-o.fa-lg.counter{'data-count'=>'{{communications_count}}', 'on-click' => 'show_communications_panel()', :style => "position:relative;", 'data-toggle' => :tooltip, :title => t('.communications')}
              .fade.edit
            .col-md-1.icon{'data-toggle' => 'edit'}
              .fade.edit
              .fade.no_edit.in
