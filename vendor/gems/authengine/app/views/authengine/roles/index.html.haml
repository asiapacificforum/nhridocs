= message_block :on => :role
%h1= t('.heading')
%table.table{:style => 'width:200px'}
  %tr
    %th= t('.roles')
    %th
  - if @all_roles.length > 0
    - for role in @all_roles
      %tr.role
        %td.name= role.name
        %td= (link_to t('defaults.remove'), authengine_role_path(role), :method => :delete) unless role.is_developer?
  - else
    %tr
      %td= t('defaults.none')

%p= link_to t('.new_role'), :controller=>:roles, :action=>:new
%p= link_to t('defaults.cancel'), admin_users_path
