%h1= "Select new password for #{@user.first_last_name}"
= form_for :user, :url => authengine_change_password_path(@user.password_reset_code) do |f| 
  %table
    %tr
      %td
        %label{:for => "password" } Enter a new password:
      %td= f.password_field :password
    %tr
      %td
        %label{:for => "password_confirmation" } Re-enter the password to confirm:
      %td= f.password_field :password_confirmation
    %tr
      %td= f.submit "Submit"
      %td
