= message_block :for => :user
%h1= t('.heading', :name => @user.first_last_name)
= form_for :user, :url => admin_change_password_path(@user.password_reset_code) do |f| 
  %table
    %tr
      %td= f.label :password, t('.password')
      %td= f.password_field :password
    %tr
      %td{:style => "padding-right:12px"}= f.label :password_confirmation, t('.password_confirmation')
      %td= f.password_field :password_confirmation
    %tr
      %td= f.submit t('defaults.submit')
      %td
