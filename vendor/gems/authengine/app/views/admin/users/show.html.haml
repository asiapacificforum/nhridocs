- scope = 'activerecord.attributes.user'
%h1= @user.first_last_name
%table.table{:style => 'width:360px'}
  %tr
    %td= t('login', :scope => scope)
    %td= @user.login
  %tr
    %td= t('email', :scope => scope)
    %td= @user.email
  %tr
    %td= t('created_at', :scope => scope)
    %td= @user.created_at.to_s(:long)
  %tr
    %td= t('activerecord.attributes.organization.name')
    %td= @user.organization && @user.organization.name
  %tr
    %td= t('.roles')
    %td= @user.roles.map(&:name).join(", ")
%br/
= link_to "Back", :back
