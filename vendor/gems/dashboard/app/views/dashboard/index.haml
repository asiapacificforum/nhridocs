%h1=t('.heading')

:css
  #csp_link, #initiate_retrieval {
    color: #337ab7;
    text-decoration: none;
    cursor : pointer;
  }
  #csp_link:hover, #initiate_retrieval:hover {
    color: #23527c;
    text-decoration: underline;
    cursor : pointer;
  }

SSL Certificate expiry date: 
= SslCertificate.new.expires_on

%h2 Security testing services:
%ul
  %li= link_to_without_permission_check "GlobalSign SSL report", "https://globalsign.ssllabs.com/analyze.html?d=#{SITE_URL}&hideResults=on&clearCache=on", :target => "_blank"
  %li= link_to_without_permission_check "Mozilla Observatory scanner", "https://observatory.mozilla.org/analyze.html?host=#{SITE_URL}", :target => "_blank"

%h2 Content Security Policy
%ul
  %li#csp_link{:onclick=>"fetch_csp_reports()"} CSP reports

#csp_reports

:coffeescript
  csp_reports_visible = false
  @fetch_csp_reports = ->
    unless csp_reports_visible
      $('#csp_reports').load("#{csp_reports_path}")
      csp_reports_visible = true
    else
      $('#csp_reports *').hide()
      csp_reports_visible = false

  $ ->
    delete_all = ->
      $('#csp_reports').load("#{csp_reports_clear_all_path}")

    $('body').on 'click', '#csp_reports #delete_all', delete_all


- if defined? GlacierArchive
  %h2 AWS Glacier Archives
  - if @glacier_archives.empty?
    %p None have been created
  - else
    %table#glacier_archives
      - @glacier_archives.each do |archive|
        = render :partial => 'glacier_archive', :locals => {:archive => archive}

:coffeescript
  @initiate_retrieval = (id)->
    $('#glacier_archives').load("#{ get_back.aws_archive_retrieval_job_create_path}", {archive_id : id})
