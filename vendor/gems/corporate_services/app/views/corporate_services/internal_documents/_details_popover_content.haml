%div#detailsContent{:style=>"display: none"}
  - scope = 'activerecord.attributes.internal_document'
  %table{:style => 'width:500px'}
    %tr
      %td= t('original_filename', :scope => scope)
      %td.name {%= o.original_filename %}
    %tr
      %td= t('filesize', :scope => scope)
      %td.size {%= o.formatted_filesize %}
    %tr
      %td= t('revision', :scope => scope)
      %td.rev {%= o.revision %}
    %tr
      %td= t('lastModified', :scope => scope)
      %td.lastModified {%= o.formatted_modification_date %}
    %tr
      %td= t('uploadedOn', :scope => scope)
      %td.uploadedOn {%= o.formatted_creation_date %}

