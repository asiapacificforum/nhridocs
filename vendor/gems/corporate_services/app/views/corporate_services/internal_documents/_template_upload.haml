/ The template to display files ready for upload and set the title/revision
%script{:id => id, :type => 'html/template'}
  .panel.panel-default.fade.template-upload
    .panel-heading
      %table{:width => '100%'}
        %tr
          %td{:colspan => 2}
            %p.name {{= file.name }}
            %strong.error.text-danger
            = hidden_field_tag "#{prefix}[lastModifiedDate]", "{{= file.lastModifiedDate }}"
            = hidden_field_tag "#{prefix}[original_type]", "{{= file.type }}"
            = hidden_field_tag "#{prefix}[filesize]", "{{= file.size }}"
          %td{:colspan => 2}
            .size= t('.processing')
            .progress.progress-striped.active{:role => 'progressbar', :aria_valuemin => '0', :aria_valuemax => '100', :aria_valuenow=>'0'}
              .progress-bar.progress-bar-success{:style => "width:0%"}
        %tr
          %td.title
            = label_tag "#{label_prefix}_title", t('.doc_title')
            = text_field_tag "#{prefix}[title]", '',:required => true
          %td.revision
            = label_tag "#{label_prefix}_revision", t('.revision')
            = text_field_tag "#{prefix}[revision]", '', :style => "width:40px"
          %td
            %div.start{:disabled => true}
              %i.fa.fa-cloud-upload.fa-lg
          %td
            %div.cancel
              %i.fa.fa-ban.cancel.fa-lg
