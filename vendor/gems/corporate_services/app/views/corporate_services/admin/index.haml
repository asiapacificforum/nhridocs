.message_block
%h1=t('.heading')

%h4= t('.filetypes')
= render :partial => 'admin/collection_configuration',
  :locals => { :new_item => @filetype,
               :create_url => corporate_services_internal_documents_filetypes_path,
               :delete_url => corporate_services_internal_documents_filetype_path('id'),
               :collection => @internal_document_filetypes,
               :item_name => 'filetype',
               :param_name => 'ext',
               :placeholder => 'e.g. ppt'}

%h4= t('.filesize_max')
= render :partial => 'admin/document_filesize_configuration', :locals => { :update_url => corporate_services_internal_documents_filesize_path }

%h4= t('.start_date')
= render :partial => 'start_date'

:coffeescript
  $ ->
    _.templateSettings = { interpolate: /\{\{(.+?)\}\}/g }
    window.flash_error_template = _.template("<ul class='error'><li>{{message}}</li></ul>")
